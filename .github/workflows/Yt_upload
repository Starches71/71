name: YouTube Video Test

on:
  workflow_dispatch: # Trigger workflow manually

jobs:
  download-and-upload:
    runs-on: ubuntu-latest

    steps:
      # Step 1: Checkout the repository
      - name: Checkout code
        uses: actions/checkout@v3

      # Step 2: Set up Node.js
      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18' # Use a stable version of Node.js

      # Step 3: Install yt-dlp
      - name: Install yt-dlp
        run: sudo apt-get update && sudo apt-get install -y yt-dlp

      # Step 4: Download a 10-second video
      - name: Download 10 seconds of video
        run: yt-dlp --download-sections "*0-10" -o "video.mp4" "https://youtu.be/3vW-l8XbVoU?si=A7I2Fu_QUiJ9PpJj"

      # Step 5: Install YouTube uploader library
      - name: Install youtube-videos-uploader
        run: npm install youtube-videos-uploader

      # Step 6: Upload video to YouTube
      - name: Upload video to YouTube
        run: |
          node -e "
          const { upload } = require('youtube-videos-uploader');
          const credentials = {
            email: 'starches171@gmail.com',
            pass: 'is-haqkabaju',
            recoveryemail: 'starches131@gmail.com'
          };
          const video = {
            path: 'video.mp4',
            title: 'Test Video',
            description: 'This is a test video uploaded via GitHub Actions'
          };
          upload(credentials, [video]).then(console.log).catch(console.error);
          "
